<Window x:Class="SXUI.Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SXUI.Test" WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="0.3*" />
            <RowDefinition Height="30" />
            <RowDefinition Height="0.7*" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Left" Content="Xaml-Code" />
        <TextBox AcceptsReturn="True" AcceptsTab="True" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="3" Grid.Row="1" x:Name="codeTextBox" />
        <Button Grid.Row="2" Content="Generate" VerticalAlignment="Center" HorizontalAlignment="Right" Width="100" Height="24" x:Name="generateButton" Click="generateButton_Click" Margin="3" />

        <Label Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Left" Content="Control" />
        <Grid x:Name="contentGrid" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="3" Grid.Row="3" />

    </Grid>
</Window>
